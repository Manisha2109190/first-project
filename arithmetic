module arithmetic_unit (
    input [7:0] a,
    input [7:0] b,
  input [1:0] select,
  output reg [15:0] result);
  always @(*) begin
    case (select)
      2'b00: result = a + b;
      2'b01: result = a - b;
      2'b10: result = a * b;
      2'b11: result = (b !=0);
      default: result = 16'b0;
    endcase
  end
endmodule
